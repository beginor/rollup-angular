{
  "name": "rollup-starter",
  "version": "1.0.0",
  "description": "rollup starter kit",
  "main": "index.html",
  "scripts": {
    "build": "pnpm run clean && pnpm run rollup",
    "build-app": "pnpm run clean-app && pnpm run ngc-web && pnpm run rollup",
    "clean": "rm -rf dist && mkdir dist",
    "clean-app": "rm -rf dist/main.* dist/chunks",
    "browser-sync": "browser-sync start --config bs-config.js",
    "rollup": "rollup -c rollup.config.js",
    "rollup-watch": "pnpm run rollup -- --watch",
    "dev": "pnpm run clean-app && concurrently 'pnpm run browser-sync' 'pnpm run watch-web'",
    "start": "pnpm run clean && pnpm run dev",
    "test": "echo test",
    "ngcc": "ngcc",
    "ngc-web": "ngc -p tsconfig.app.json",
    "ngc-web-watch": "pnpm run ngc-web -- -w",
    "watch-web": "concurrently 'pnpm run ngc-web-watch' 'pnpm run rollup-watch'",
    "ng": "ng",
    "build-shared": "ng build app-shared --configuration development"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beginor/rollup-starter.git"
  },
  "keywords": [
    "rollup",
    "starter"
  ],
  "author": "beginor <beginor@qq.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/beginor/rollup-starter/issues"
  },
  "homepage": "https://github.com/beginor/rollup-starter#readme",
  "dependencies": {
    "@popperjs/core": "^2.11.4",
    "bootstrap": "^5.1.3",
    "@types/bootstrap": "^5.1.9",
    "bootstrap-icons": "^1.8.1",
    "tslib": "^2.3.1",
    "@angular/animations": "^13.3.0",
    "@angular/common": "^13.3.0",
    "@angular/compiler": "^13.3.0",
    "@angular/core": "^13.3.0",
    "@angular/forms": "^13.3.0",
    "@angular/platform-browser": "^13.3.0",
    "@angular/platform-browser-dynamic": "^13.3.0",
    "@angular/router": "^13.3.0",
    "@angular/cdk": "^13.3.0",
    "@angular/material": "^13.3.0",
    "rxjs": "^7.5.4",
    "zone.js": "~0.11.4",
    "@angular/localize": "^13.3.0",
    "devextreme": "^21.2.5",
    "devextreme-angular": "^21.2.5",
    "@ng-bootstrap/ng-bootstrap": "^12.0.0",
    "ng-zorro-antd": "^13.1.0"
  },
  "devDependencies": {
    "eslint": "^8.12.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "rollup": "^2.70.1",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "sass": "^1.49.11",
    "typescript": "^4.6.3",
    "esbuild": "^0.14.29",
    "@angular-devkit/build-angular": "^13.3.0",
    "@angular/cli": "^13.3.0",
    "@angular/compiler-cli": "^13.3.0",
    "ng-packagr": "^13.3.0",
    "@types/node": "^12.11.1"
  }
}
